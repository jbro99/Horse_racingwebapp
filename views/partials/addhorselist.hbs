<form class="ui stacked segment form" action="/dashboard/addhorselist" method="POST" enctype="multipart/form-data">
  <div class="two fields">
    <div class="field">
      <label>Title</label>
      <input placeholder="Racecourse" type="text" name="title" autofocus required pattern = "[0-9A-Z][\0-9a-z\S]+( [0-9A-Z][0-9a-z]+)*"
             title = "Please enter a valid song title"> 
    </div>
    <div class="field">
      <label>Distance </label>
      <input placeholder="Image" type="file" name="picture" required>
    </div>
  </div>
  <button class="ui blue submit button">Add Horse list</button>
</form>
 